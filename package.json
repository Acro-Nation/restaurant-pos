{
  "name": "restaurant-pos",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "format:write:server": "prettier \"apps/server/**/*.{ts,tsx,js,json}\" --write",
    "format:write:dashboard": "prettier \"apps/dashboard/**/*.{ts,tsx,js,json}\" --write",
    "tsc:server": "pnpm -r --filter apps/server tsc --noEmit",
    "tsc:dashboard": "pnpm -r --filter apps/dashboard tsc --noEmit",
    "lint:server": "pnpm -r --filter apps/server lint",
    "lint:dashboard": "pnpm -r --filter apps/dashboard lint",
    "build:server": "pnpm -r --filter apps/server build",
    "build:dashboard": "pnpm -r --filter apps/dashboard build",
    "validate:server": "pnpm format:write:server && pnpm tsc:server && pnpm lint:server && pnpm build:server",
    "validate:dashboard": "pnpm format:write:dashboard && pnpm tsc:dashboard && pnpm lint:dashboard && pnpm build:dashboard"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.0.0"
  }
}
