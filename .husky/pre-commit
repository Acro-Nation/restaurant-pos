# Get a list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Check if the changes are in "apps/dashboard" or "apps/server"
if echo "$STAGED_FILES" | grep -q '^apps/dashboard/'; then
  echo "Client changes detected. Running dashboard validation..."
  pnpm validate:dashboard
fi

if echo "$STAGED_FILES" | grep -q '^apps/server/'; then
  echo "Server changes detected. Running server validation..."
  pnpm validate:server
fi
