#!/bin/sh

# Get a list of staged files
STAGED_FILES=$(git diff --cached --name-only)

# Initialize flags
DASHBOARD_CHANGES=false
SERVER_CHANGES=false

# Check each staged file
while IFS= read -r file; do
  case "$file" in
    apps/dashboard/*)
      DASHBOARD_CHANGES=true
      ;;
    apps/server/*)
      SERVER_CHANGES=true
      ;;
  esac
done <<< "$STAGED_FILES"

# Run validations only where changes were detected
if [ "$DASHBOARD_CHANGES" = true ]; then
  echo "ðŸ“± Dashboard changes detected. Running dashboard validation..."
  pnpm validate:dashboard || exit 1
fi

if [ "$SERVER_CHANGES" = true ]; then
  echo "ðŸ–¥ï¸  Server changes detected. Running server validation..."
  pnpm validate:server || exit 1
fi

exit 0
